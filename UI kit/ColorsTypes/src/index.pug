include ./group one/rectangle
include ./group two/text-blocks

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title ColorsTypes
    link(rel='stylesheet' href='style.css')
    
  body
    .group-one-block
      +colors('1','dark100', 'color-1','Dark Shade 100%','#1F2041')
      +colors('2','dark75', 'color-2','Dark Shade 75%','#1F2041')
      +colors('3','dark50', 'color-3','Dark Shade 50%','#1F2041')
      +colors('4','dark25', 'color-4','Dark Shade 25%','#1F2041')
      +colors('5','dark5', 'color-5','Dark Shade 5%','#1F2041')
      +colors('6','purple', 'color-6','Purple','#BC9CFF')
      +colors('7','green', 'color-7','Green','#6FCF97')

    .text-block
      .text-block__headers-list
        +header-blocks('h1','h1','H1')
        +header-blocks('h2','h2','H2')
        +header-blocks('h3','h3','H3')
        +header-blocks('body','body','body')
      .text-block__inform-list
        +info-header-blocks('h1','h1','This one is the sub-section or widget title')
        +info-header-blocks('h2','h2','Next one is the item title inside widgets')
        +info-header-blocks('h3','h3', 'This is a label or CTA text')
        +info-header-blocks('body','body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.')
