include /components/logo/logo-colored/logo-colored
include /components/links/links
mixin footer
    .footer&attributes(attributes)
        .footer__logo-info
            +logo-colored.footer__logo-colored
            .footer__info Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        .footer__nav.footer_list
            +link('Навигация').footer__item.footer__item_active
            +link('О нас').footer__item.footer__item_disable
            +link('Новости').footer__item.footer__item_disable
            +link('Служба поддержки').footer__item.footer__item_disable
            +link('Услуги').footer__item.footer__item_disable
        .footer__about-us.footer_list
            +link('О нас').footer__item.footer__item_active
            +link('О сервисе').footer__item.footer__item_disable
            +link('Наша команда').footer__item.footer__item_disable
            +link('Вакансии').footer__item.footer__item_disable
            +link('Инвесторы').footer__item.footer__item_disable
        .footer__support-service.footer_list
            +link('Служба поддержки').footer__item.footer__item_active
            +link('Соглашения').footer__item.footer__item_disable
            +link('Сообщества').footer__item.footer__item_disable
            +link('Связь с нами').footer__item.footer__item_disable
        .footer__subscription.footer_list
            +link('Подписка').footer__item.footer__item_active
            +link('Получайте специальные предложения и новости сервиса').footer__item.footer__item_disable
            .footer__field
                p.footer__sub-info Email
                i.footer__material-icons arrow_forward