//- theme for Material Icon: lin-grad

//- type text field: 
    text = text field
    sub = subscription

//- material icons theme: 
    lin-grad-theme

//- theme type for text-field__block :
    hover-theme
 
    
mixin field(type,placeholder,matIconsTheme, matIconsName) 
    if type == 'text'
        form.text-field&attributes(attributes)
            lable.text-field__lable
                input(type="text" placeholder=placeholder).text-field__input
    else if type == 'hoverText'
        form.text-field.text-field_hover-theme&attributes(attributes)
            lable.text-field__lable
                input(type="text" placeholder=placeholder).text-field__input.text-field_hover-theme__input
    else if type == 'sub'
        form.text-field&attributes(attributes)
            label.text-field__lable
                input(type="email" placeholder=placeholder).text-field__input.text-field__input_sub
                i.text-field__material-icons(class = 'text-field__material-icons_' +  matIconsTheme) #{matIconsName}
    else if type == 'mask'
        form.text-field&attributes(attributes)
            .text-field__block
                label.text-field__lable
                    input(type="text" placeholder=placeholder).text-field__input.text-field__input_mask