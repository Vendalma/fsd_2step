mixin logo({colored = false}={})
  .logo
    if !colored
      img.logo__logo-gray(src=require("@images/logo-gray.svg").default alt="round logo")
    if colored
      a.logo__link(href="../landing/landing.html")
        img.logo__logo-colored(src=require("@images/logo-colored.svg").default alt="colored round logo")
        img.logo__text(src=require("@images/logo-text.svg").default alt="toxin")