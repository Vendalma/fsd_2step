include /components/buttons/buttons
include /components/description/description

mixin dropdown_date(type,placeholder1,description1,placeholder2,description2)
    if type == 'filter'
        form.dropdown-date.dropdown-date_filter&attributes(attributes)
            +description(description1).dropdown-date__description
            label.dropdown-date__label
                input(type='text' placeholder=placeholder1 id='filter' class='dropdown-date__input dropdown-date__input_filter datepicker-here')
                +button('only-text-default','expand_more','dropdown-date__material-icon dropdown-date__material-icon_margin-m')
    else if type == 'inline'
        .dropdown-date.dropdown-date__inline.datepicker-here
                
    else if type == 'double'
        form.dropdown-date.dropdown-date_margin-s&attributes(attributes)
            label.dropdown-date__label
                .dropdown-date__block
                    +description(description1).dropdown-date__description
                    input(type='text' placeholder=placeholder1  
                            class='dropdown-date__input' 
                            class='dropdown-date__input_double' 
                            class = 'datepicker-here' 
                            class='dropdown-date__input-start')
                    i.dropdown-date__material-icon.dropdown-date__material-icon_margin-s expand_more
                .dropdown-date__block
                    +description(description2).dropdown-date__description
                    input(type='text' placeholder=placeholder2 
                            class='dropdown-date__input' 
                            class='dropdown-date__input_double' 
                            class='dropdown-date__input-end')
                    i.dropdown-date__material-icon.dropdown-date__material-icon_margin-s expand_more
                    