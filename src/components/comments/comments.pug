include /components/like-button/like-button

mixin comments(userPhoto,userName,date,count,countActive,text)
    .comments&attributes(attributes)
        .comments__block-user
            .comments__user-photo
                img(src=require('@images/' + userPhoto).default, alt=userName, class='comments__photo')
            .comments__user-info
                span.comments__user-name #{userName}
                span.comments__date #{date}
        .comments__block
            .comments__like-button
                +like_button(count,countActive)
            .comments__text #{text}
