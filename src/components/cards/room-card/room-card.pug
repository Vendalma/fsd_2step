include ../../../components/rate button/rate button

mixin room-card(type, number, price, rate, reviews,{imgs})
  .room-card
    .room-card__container
      .room-card__slider-block
        .room-card__slider
          each image in imgs
            img.room-card__image(src=require(`@images/${image}`).default, alt=altText )
    .room-card__container
      .room-card__block
        .room-card__info-room
          span.room-card__info-room_no № 
          span.room-card__info-room_number #{number}
          if type == 'luxury'
            span.room-card__info-room_luxury  люкс
        .room-card__price
          span.room-card__price_text #{price}
          span.room-card__price_info  в сутки
      .room-card__block
        .room-card__line   
      .room-card__block.room-card__block_padding
        .room-card__rate-button
          +rateButton(rate)
        .room-card__reviews #{reviews}
          span.room-card__reviews_info  Отзывов