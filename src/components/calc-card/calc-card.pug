include /components/dropdown-date/dropdown-date
include /components/dropdown/dropdown
include /components/description/description
include /components/buttons/buttons

mixin calc-card(options = {})
  -  
    const  {
      roomNumber = "888",
      isLuxury = true,
      roomPrice = "9 990",
      dropdownDateSetting ={type:"range",
        isSettingDate: true,
        description1:"прибытие",
        description2:"выезд"},
      dropdownSettings = {type:"guests",
        score1 :2,
        score2: 1},
      priceCalculating = "9 990",
      dayCalculating = "4 суток", 
      calculatingTotal = "39 960", 
      serviceSale = "2 179", 
      serviceTotal = "0", 
      additionalServiceTotal = "300",
      totalSum = "38 081"} = options

  .calc-card
    form(action="/mock-address/change-me" method="post").calc-card__form
      .calc-card__wrapper
        p.calc-card__info
          span.calc-card__info-no &#8470;&#32;
            span.calc-card__info-num #{roomNumber}
            if isLuxury
              span.calc-card__info-luxury люкс
          span.calc-card__info-price #{roomPrice}&#8381;&#32;
            span.calc-card__info-text в сутки

        .calc-card__dropdown-date
          +dropdownDate(dropdownDateSetting)
        .calc-card__guests
          .calc-card__description
            +description({text:"гости"})
          .calc-card__dropdown
            +dropdown(dropdownSettings)
        ul.calc-card__calculating-items
          li.calc-card__item
            span.calc-card__item-calculating #{priceCalculating}&#8381; x #{dayCalculating}
            span.calc-card__item-total #{calculatingTotal}&#8381;
          li.calc-card__item
            .calc-card__item-group
              span.calc-card__item-calculating Сбор за услуги: скидка #{serviceSale}&#8381;
              span.calc-card__item-circle i
            span.calc-card__item-total #{serviceTotal}&#8381;
          li.calc-card__item
            .calc-card__item-group
              span.calc-card__item-calculating.calc-card__item-calculating_small Сбор за дополнительные услуги
              span.calc-card__item-circle i
            span.calc-card__item-total #{additionalServiceTotal}&#8381;

      p.calc-card__total
        span.calc-card__total-text Итого
        span.calc-card__total-line
        span.calc-card__total-sum #{totalSum}&#8381;
      .calc-card__button
        +button({theme:"long",
          text:"Забронировать",
          type: "submit"})