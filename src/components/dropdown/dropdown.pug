include ../buttons/buttons

mixin dropdown({type, score1 = 0, score2 = 0, score3 = 0,active = false}={})
  if type == "guests"
    .dropdown.js-dropdown.dropdown_guests
      .dropdown__select-container.js-dropdown__select-container(class = active? "dropdown__select-container_open" : "dropdown__select-container_default")
        span.dropdown__placeholder.js-dropdown__placeholder Сколько гостей
        i.dropdown__material-icons.js-dropdown__material-icons.dropdown__material-icons_default expand_more
      ul.dropdown__select-list.js-dropdown__select-list(class = active?  "dropdown__select-list_open-guests" : "dropdown__select-list_default")
        li.dropdown__item
          span.dropdown__item-name Взрослые
          .dropdown__item-count(data-name = 'взрослый|взрослых|взрослых' data-num = 0)
            +button({theme:"text-default",text:"-"}).dropdown__item-button.js-dropdown__item-button_min.dropdown__item-button_hidden
            span.dropdown__item-score.js-dropdown__item-score #{score1} 
            +button({theme:"text-default",text:"+"}).dropdown__item-button.js-dropdown__item-button_plus
        li.dropdown__item.dropdown__item_margin
          span.dropdown__item-name Дети
          .dropdown__item-count(data-name = 'ребенок|ребенка|детей' data-num = 1)
            +button({theme:"text-default",text:"-"}).dropdown__item-button.js-dropdown__item-button_min.dropdown__item-button_hidden
            span.dropdown__item-score.js-dropdown__item-score #{score2} 
            +button({theme:"text-default",text:"+"}).dropdown__item-button.js-dropdown__item-button_plus
        li.dropdown__item
          span.dropdown__item-name Младенцы
          .dropdown__item-count(data-name = 'младенец|младенца|младенцев' data-num = 2)
            +button({theme:"text-default",text:"-"}).dropdown__item-button.js-dropdown__item-button_min.dropdown__item-button_hidden
            span.dropdown__item-score.js-dropdown__item-score #{score3} 
            +button({theme:"text-default",text:"+"}).dropdown__item-button.js-dropdown__item-button_plus
        li.dropdown__item.dropdown__item_margin-top
          +button({theme:"text-colored",text:"Очистить"}).dropdown__clear-button.js-dropdown__clear-button.dropdown__clear-button_hidden
          +button({theme:"text-colored",text:"Применить"}).dropdown__apply-button.js-dropdown__apply-button
  else if type == "room" 
    .dropdown.js-dropdown.dropdown_room
      .dropdown__select-container.js-dropdown__select-container(class = active? "dropdown__select-container_open" : "dropdown__select-container_default")
        span.dropdown__placeholder.js-dropdown__placeholder Какие удобства
        i.dropdown__material-icons.js-dropdown__material-icons.dropdown__material-icons_default expand_more
      ul.dropdown__select-list.js-dropdown__select-list(class = active?  "dropdown__select-list_open-room" : "dropdown__select-list_default")
        li.dropdown__item
          span.dropdown__item-name Спальни
          .dropdown__item-count(data-name='спальня|спальни|спален' data-num=0)
            +button({theme:"text-default",text:"-"}).dropdown__item-button.js-dropdown__item-button_min.dropdown__item-button_hidden
            span.dropdown__item-score.js-dropdown__item-score #{score1} 
            +button({theme:"text-default",text:"+"}).dropdown__item-button.js-dropdown__item-button_plus
        li.dropdown__item.dropdown__item_margin
          span.dropdown__item-name Кровати
          .dropdown__item-count(data-name='кровать|кровати|кроватей' data-num=1)
            +button({theme:"text-default",text:"-"}).dropdown__item-button.js-dropdown__item-button_min.dropdown__item-button_hidden
            span.dropdown__item-score.js-dropdown__item-score #{score2} 
            +button({theme:"text-default",text:"+"}).dropdown__item-button.js-dropdown__item-button_plus
        li.dropdown__item
          span.dropdown__item-name Ванные комнаты
          .dropdown__item-count(data-name='ванная комната|ванные комнаты|ванных комнат' data-num=2)
            +button({theme:"text-default",text:"-"}).dropdown__item-button.js-dropdown__item-button_min.dropdown__item-button_hidden
            span.dropdown__item-score.js-dropdown__item-score #{score3}
            +button({theme:"text-default",text:"+"}).dropdown__item-button.js-dropdown__item-button_plus                      

