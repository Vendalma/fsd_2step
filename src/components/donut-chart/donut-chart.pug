mixin chart
  - const {chartOptions} = require('@components/donut-chart/donut-chart.json');
  .chart
    .chart__wrapper
      canvas(width="121" height="120").chart__diagram.js-chart__diagram
      p.chart__info 
        span.chart__count #{chartOptions.total}
        span.chart__text #{chartOptions.totalText}
    ul.chart__legend
      for item in chartOptions.items
        li.chart__item(class = `chart__item_${item.className}`) #{item.text}