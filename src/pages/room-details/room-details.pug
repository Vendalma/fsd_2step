extends  /layout/website-base/website-base
include /layout/header/header
include /layout/footer/footer
include /layout/footer-small/footer-small
include /layout/cards/calc-card/calc-card
include /components/icon-list/icon-list
include /components/comment/comment
include /components/bullet-list/bullet-list
include /components/donut-chart/donut-chart

block head
    title Room details
block body
    +header.room-details__header
    main.room-details__wrapper
        .room-details__gallery.gallery
            .gallery__item-one
            .gallery__column
                .gallery__item-two
                .gallery__item-three
        .room-details__container.container
            .container__wrapper.container__wrapper_s-710.container__wrapper_margin-r-10
                .container__block.container__block_margin-b-18.container__block_row
                    .container__block.container__block_column.container__block_margin-r-10
                        h2.container__title  Сведения о номере
                        .container__block_margin-b-22
                            +iconList('insert_emoticon','Комфорт','Шумопоглощающие стены')
                        .container__block_margin-b-22
                            +iconList('location_city','Удобство','Окно в каждой из спален')
                        .container__block_column
                            +iconList('whatshot','Уют','Номер оснащён камином',false)
                    .container__block.container__block_column
                        h2.container__title  Впечатления от номера
                        +chart.room-details__chart
                .container__block.container__block_margin-b-30.container__block_column
                    .container__block_text
                        h2.container__title  Отзывы посетителей номера
                        span.container__text.container__text_item 2 отзыва
                    .container__block.container__block_column
                        .container__block_margin-b-22    
                          -//  +comments('user1.png','Мурад Сарафанов', '5 дней назад','12',true,'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
                        .container__block_margin-b-4 
                          -//  +comments('user2.png','Патрисия Стёклышкова','Неделю назад','2',false,'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент.')
                .container__block.container__block_row
                     .container__block.container__block_column.container__block_margin-r-10
                        h2.container__title.container__title_margin-b-4 Правила
                        -//+bulletList
                     .container__block.container__block_column
                        h2.container__title Отмена
                        .container__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
            .container__wrapper.container__wrapper_s-380
                +calc-card('888','9 990',true)
    +footer.room-details__footer
    +footer-small.room-details__footer-small