                    .form-elements__block.form-elements__block_margin-m
                    -// +dropdown_date('filter','19 авг - 23 авг','filter date dropdown').form-elements__dropdown
                    .form-elements__block_size-m
                        +description('subscription text field').form-elements__description.form-elements__description_margin-s
