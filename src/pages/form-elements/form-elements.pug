                        +toggle('Получать спецпредложения').form-elements__toggle
                    .form-elements__block.form-elements__block_margin-m
                        +description('like button').form-elements__description.form-elements__description_margin-m
                        .form-elements__block_row
                            +like_button('2').form-elements__like-button
                            +like_button('12',true).form-elements__like-button
                    .form-elements__block
                        +description('rate button').form-elements__description.form-elements__description_margin-m
                        .form-elements__block_row
                            +rateButton(4).form-elements__rate-button
                            +rateButton(5).form-element__rate-button
                .form-elements__content_column.form-elements__content_widhth-320
                    .form-elements__block.form-elements__block_margin-m
                        +range_slider('range slider')
                    .form-elements__block
                        +description('buttons').form-elements__description.form-elements__description_margin-m
                        .form-elements__block_row
                            +button('bg-primary-grad', 'click me').form-elements__button
                            +button('bg-primary-grad_hover', 'click me').form-elements__button
                        .form-elements__block_row
                            +button('border-primary-grad', 'click me').form-elements__button
                            +button('border-primary-grad_hover', 'click me').form-elements__button
                        .form-elements__block_row
                            +button('only-text-colored', 'click me').form-elements__button
                            +button('only-text-default', 'click me').form-elements__button
                        .form-elements__block_row
                            +button('long', 'перейти к оплате').form-elements__button.form-elements__button_margin-0
                    .form-elements__block.form-elements__block_margin-top-10
                        +description('pagination').form-elements__description.form-elements__description_margin-m
                        +pagination.form-elements__pagination
            .form-elements__content_row
                .form-elements__content_column.form-elements__content_margin-r-126.form-elements__content_width-320
                    .form-elements__block
                        .form-elements__block_size-m
                            +description('dropdown', true, 'default').form-elements__description.form-elements__description_margin-s
                            +dropdown('room',2,2,0).form-elements__dropdown-room
                        .form-elements__block_size-m
                            +description('dropdown', true, 'expanded').form-elements__description.form-elements__description_margin-s
                            +dropdown('room',2,2,0,true).form-elements__dropdown-room
