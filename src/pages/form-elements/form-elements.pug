extends  /layout/uikit/uikit
include /components/field/field
include /components/dropdown/dropdown
include /components/dropdown-date/dropdown-date


block head
  title Form elements

block body
    .container
        .container_content
            .fe__block.fe__block_margin-s
                .fe__description
                    .fe__block-name text field
                    .fe__block-status default
                +field('text','Email').fe__field
            .fe__block.fe__block_margin-s
                .fe__description
                    .fe__block-name text field
                    .fe__block-status hover / focus
                +field('hoverText','This is pretty awesome').fe__field
            .fe__block.fe__block_margin-s
                .fe__description
                    .fe__block-name dropdown
                    .fe__block-status default
                +dropdown('Сколько гостей', 'Взрослые','Дети','Младенцы').fe__dropdown
            .fe__block.fe__block_margin-m
                .fe__description
                    .fe__block-name masked text field
                    .fe__block-status default
                +field('mask','ДД.ММ.ГГГГ').fe__field
            .fe__block.fe__block_row.fe__block_margin-m
                .fe__block-wrapper
                    .fe__description
                        .fe__block-name date dropdown
                    +dropdown_date('ДД.ММ.ГГГГ').fe__dropdown
                .fe__block-wrapper   
                    .fe__description
                        .fe__block-name date dropdown
                    +dropdown_date('19.08.2019').fe__dropdown
            .fe__block.fe__block_margin-m
                .fe__description
                    .fe__block-name filter date dropdown
                +dropdown_date('19 авг - 23 авг','true').fe__dropdown
            .fe__block
                .fe__description
                    .fe__block-name subscription text field
                +field('sub','Email').fe__field
        .container_content