block body
    .form-elements
        .form-elements__container
            .form-elements__content_row
                .form-elements__content_column.form-elements__content_margin-r-126.form-elements__content_width-320
                    .form-elements__block.form-elements__block_margin-s
                        +description('text field',true,'default').form-elements__description.form-elements__description_margin-s 
                        +field('text','Email').form-elements__field
                    .form-elements__block.form-elements__block_margin-s
