                    .form-elements__block.form-elements__block_margin-s
                        +description('dropdown',true,'default').form-elements__description.form-elements__description_margin-s
                        +dropdown('guests',0,0,0).form-elements__dropdown
                    .form-elements__block.form-elements__block_margin-m
                        +description('masked text field',true,'default').form-elements__description.form-elements__description_margin-s
                        +field('mask','ДД.ММ.ГГГГ').form-elements__field
                    .form-elements__block.form-elements__block_margin-m
